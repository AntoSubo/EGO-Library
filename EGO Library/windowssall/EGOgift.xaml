<Window x:Class="EGO_Library.windowssall.EGOgift"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGO_Library.windowssall"
        mc:Ignorable="d"
        Title="EGO Gift" Height="300" Width="400" HorizontalAlignment="Center">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Верхняя панель -->
            <RowDefinition Height="*"/>    <!-- Основная часть -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <TextBlock Text="EGO Gift"
                       FontSize="20"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Help" Width="60" Margin="0,0,5,0"/>
                <Button Content="Exit" Width="60"/>
            </StackPanel>
        </DockPanel>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть: изображение -->
            <Border Background="#FFF" BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="5" Margin="0,0,10,0">
                <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
            </Border>

            <!-- Правая часть -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Status:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Status}" Margin="0,0,0,10"/>

                <TextBlock Text="Description:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="Recipes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding Recipes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="• {Binding}" Margin="10,0,0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Sources" FontWeight="SemiBold" Margin="10,10,0,5"/>
                <ItemsControl ItemsSource="{Binding Sources}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="• {Binding}" Margin="10,0,0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Back to List"
                        Command="{Binding BackCommand}"
                        Width="120"
                        Height="30"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Left" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>