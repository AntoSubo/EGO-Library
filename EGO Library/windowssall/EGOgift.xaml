<Window x:Class="EGO_Library.windowssall.EGOgift"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGO_Library.windowssall"
        mc:Ignorable="d"
        Title="EGO Gift" Height="500" Width="400">

    <ScrollViewer Padding="20">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
            <Image Source="{Binding Icon}" Height="100" Width="100" HorizontalAlignment="Left"/>

            <TextBlock Text="Уровень:" FontWeight="Bold" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding Tier}"/>

            <TextBlock Text="Статус:" FontWeight="Bold" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding Status}"/>

            <TextBlock Text="Описание:" FontWeight="Bold" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0 0 0 10"/>

            <TextBlock Text="Где получить:" FontWeight="Bold" Margin="0 10 0 0"/>
            <ListBox ItemsSource="{Binding Sources}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="•  "><Run Text="{Binding}"/></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Слияния:" FontWeight="Bold" Margin="0 10 0 0"/>
            <ListBox ItemsSource="{Binding FusionRecipes}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Назад" HorizontalAlignment="Left" Width="100" Margin="0 20 0 0" Click="Back_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>