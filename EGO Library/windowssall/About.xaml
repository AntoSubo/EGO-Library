<Window x:Class="EGO_Library.windowsall.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="6" Padding="15" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Основная часть -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="EGO Library"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       Margin="5,0,0,10"/>

            <!-- Основная информация -->
            <StackPanel Grid.Row="1" Margin="5,10,5,0">
                <TextBlock Text="Version:" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="1.0" FontSize="14" Margin="10,0,0,10"/>

                <Separator Margin="0,10,0,10"/>

                <TextBlock Text="© 2025 EGO Library Project"
                           Foreground="Gray"
                           FontSize="12"
                           HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Кнопка Назад -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Back"
                        Width="80"
                        Height="28"
                        Padding="5,2"
                        Background="#F0F0F0"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Click="Back_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
