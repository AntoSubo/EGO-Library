<Window x:Class="EGO_Library.windowssall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGO_Library.windowssall"
        mc:Ignorable="d"
        Title="EGO Library" Height="600" Width="900"
        Background="#1E1E1E" Foreground="White" FontFamily="Segoe UI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="373*"/>
            <ColumnDefinition Width="307*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#252526">
            <TextBlock Text="Фильтры" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <TextBlock Text="Поиск:"/>
            <TextBox Margin="0 5 0 10"/>

            <TextBlock Text="Уровень (Tier):"/>
            <ComboBox  Margin="0 5 0 10"/>

            <TextBlock Text="Статус:"/>
            <ComboBox  Margin="0 5 0 10"/>

            <Button Content="Сбросить фильтры" Margin="0 20 0 0"/>
        </StackPanel>

        <ScrollViewer Grid.Column="1" Padding="10" Grid.ColumnSpan="2">
            <ListBox ItemsSource="{Binding FilteredItems}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="200" ItemHeight="150" Margin="0,0,10,10"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D30" Margin="5" Padding="10">
                            <StackPanel>
                                <!--<Image Source="{Binding Icon}" Height="60" Width="60" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Tier}" FontSize="12" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Status}" FontSize="12" TextAlignment="Center"/>-->
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
