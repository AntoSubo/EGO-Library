<UserControl x:Class="EGO_Library.Controls.EgoGiftCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">

    <Border Background="#2D2D30" CornerRadius="8" Margin="5" Padding="10" 
            BorderBrush="#404040" BorderThickness="1"
            Cursor="Hand">
        <StackPanel>
            <TextBlock Text="{Binding Icon}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" 
                       TextAlignment="Center" TextTrimming="CharacterEllipsis"
                       Foreground="White" Margin="0,0,0,3"/>
            <TextBlock Text="{Binding Tier, StringFormat='Tier {0}'}" FontSize="11" 
                       TextAlignment="Center" Foreground="#CCCCCC" Margin="0,0,0,2"/>
            <TextBlock Text="{Binding Status}" FontSize="11" 
                       TextAlignment="Center" Foreground="#AAAAAA"/>
        </StackPanel>
    </Border>
</UserControl>