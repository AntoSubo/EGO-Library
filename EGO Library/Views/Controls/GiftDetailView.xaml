<UserControl x:Class="EGO_Library.Controls.GiftDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="GiftNameText" Text="Gift Name" FontSize="24" FontWeight="Bold" Margin="10"/>
            <Button Content="View Recipe" Width="150" Height="30" Margin="10"
                    Click="ViewRecipe_Click"/>
            <Button Content="Back" Width="150" Height="30" Margin="10"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
