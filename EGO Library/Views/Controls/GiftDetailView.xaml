<UserControl x:Class="EGO_Library.Views.Controls.GiftDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <TextBlock Text="EGO Gift"
                       FontSize="20"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Help" Width="60" Margin="0,0,5,0" Click="HelpButton_Click"/>
                <Button Content="Back" Width="60" Click="BackButton_Click"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#FFF" BorderBrush="#CCC" BorderThickness="1"
                    CornerRadius="8" Padding="5" Margin="0,0,10,0">
                <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
            </Border>

            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Status:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Status}" Margin="0,0,0,10"/>

                <TextBlock Text="Description:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <!-- Кликабельные Recipes -->
                <TextBlock Text="Recipes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding Recipes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="• {Binding}" Margin="10,0,0,2" Cursor="Hand"
                                       MouseDown="RecipeItem_MouseDown"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Sources" FontWeight="SemiBold" Margin="10,10,0,5"/>
                <ItemsControl ItemsSource="{Binding Sources}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="• {Binding}" Margin="10,0,0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>