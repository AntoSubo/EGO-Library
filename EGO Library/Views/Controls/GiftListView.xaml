<UserControl x:Class="EGO_Library.Views.Controls.GiftListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель фильтров -->
        <Border Grid.Column="0" 
                Background="#FFF" 
                CornerRadius="8"
                Padding="10" 
                Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Filters" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Status" 
                           FontWeight="SemiBold"/>
                <StackPanel>
                    <CheckBox Content="Burn"/>
                    <CheckBox Content="Bleed"/>
                    <CheckBox Content="Charge"/>
                    <CheckBox Content="Poise"/>
                </StackPanel>
                <TextBlock Text="Level" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,5"/>
                <ComboBox Width="100" 
                          ItemsSource="{Binding AvailableTiers}"
                          SelectedItem="{Binding SelectedTier}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StringFormat='Tier {0}'}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,20,0,5" 
                         Height="25"
                         Padding="5"/>
                <Button Content="Clear" 
                        Height="25" 
                        Width="100"
                        Command="{Binding ClearFiltersCommand}"
                        Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Правая панель с дарами -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с кнопками -->
            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="EGO Library" 
                           FontSize="22" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="About" 
                            Width="70" 
                            Height="25" 
                            Margin="5,0,0,0"
                            Command="{Binding NavigateToAboutCommand}"/>
                    <Button Content="Help" 
                            Width="70" 
                            Height="25" 
                            Margin="5,0,0,0"
                            Command="{Binding ShowHelpCommand}"/>
                </StackPanel>
            </DockPanel>

            <!-- Список даров -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Gifts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Margin="0,10,0,0"
                                       Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30" 
                                    CornerRadius="8" 
                                    Margin="5" 
                                    Padding="10" 
                                    Width="120" 
                                    Height="140" 
                                    Cursor="Hand">
                                <StackPanel>
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="24" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center" 
                                               TextTrimming="CharacterEllipsis" 
                                               Foreground="White"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Tier, StringFormat='Tier {0}'}" 
                                               FontSize="11" 
                                               TextAlignment="Center" 
                                               Foreground="#CCCCCC"
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Status}" 
                                               FontSize="11" 
                                               TextAlignment="Center" 
                                               Foreground="#AAAAAA"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>