<UserControl x:Class="EGO_Library.Views.Controls.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#1E1E1E" Width="400" Height="450">
        <Border Background="#2D2D30" CornerRadius="10" Padding="30" 
                BorderBrush="#404040" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="EGO Library" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Вход в систему" 
                           FontSize="16" 
                           Foreground="#CCCCCC"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Имя пользователя" 
                           Foreground="#AAAAAA" 
                           FontSize="12"
                           Margin="0,10,0,5"/>
                <TextBox Text="{Binding Username}" 
                         Padding="8" 
                         Background="#3C3C3C" 
                         Foreground="White"
                         BorderBrush="#555555"/>

                <TextBlock Text="Пароль" 
                           Foreground="#AAAAAA" 
                           FontSize="12"
                           Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Padding="8" 
                             Background="#3C3C3C" 
                             Foreground="White"
                             BorderBrush="#555555"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6B6B" 
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,10">
                    <Button Content="Очистить" 
                            Command="{Binding ClearCommand}"
                            Background="#555555" 
                            Foreground="White"
                            Padding="15,5" 
                            Margin="0,0,10,0"/>
                    <Button Content="Войти" 
                            Command="{Binding LoginCommand}"
                            Background="#007ACC" 
                            Foreground="White"
                            Padding="15,5" 
                            FontWeight="SemiBold"/>
                </StackPanel>

                <Separator Background="#555555" Margin="0,10,0,10"/>

                <TextBlock Text="Нет аккаунта?" 
                           Foreground="#CCCCCC" 
                           FontSize="12"
                           HorizontalAlignment="Center"/>

                <Button Content="Зарегистрироваться" 
                        Command="{Binding NavigateToRegisterCommand}"
                        Background="Transparent" 
                        Foreground="#569CD6"
                        BorderBrush="#569CD6"
                        BorderThickness="1"
                        Padding="15,5" 
                        Margin="0,10,0,0"/>

                <TextBlock Text="Демо доступ: admin / password123" 
                           FontSize="10" 
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>