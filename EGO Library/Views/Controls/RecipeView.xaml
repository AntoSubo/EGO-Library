<UserControl x:Class="EGO_Library.Views.Controls.RecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:EGO_Library.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>

    <Grid Margin="10" Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Рецепты Слияния" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="{Binding TotalRecipes, StringFormat=' (Всего: {0})'}" 
                           FontSize="24"
                           Foreground="Gray"
                           Margin="10,0,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasRecipes}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
            <Button Content="Назад" 
                    Width="80" 
                    Height="30" 
                    Command="{Binding GoBackCommand}"
                    DockPanel.Dock="Right"/>
        </DockPanel>

        <Border Grid.Row="1" 
                Background="#2D2D30" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="250" 
                         Height="30"
                         Padding="8"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555555"/>

                <TextBlock Text="Сложность:" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"/>

                <ComboBox ItemsSource="{Binding AvailableDifficulties}" 
                         SelectedItem="{Binding SelectedDifficulty}"
                         Width="120" 
                         Height="30"
                         Background="#3C3C3C"
                         Foreground="White"/>

                <Button Content="Сбросить" 
                        Command="{Binding ClearFiltersCommand}"
                        Width="80" 
                        Height="30"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasRecipes}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="#2D2D30" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Рецепты не найдены" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>

        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Style>
                <Style TargetType="ScrollViewer">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasRecipes}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>

            <ItemsControl ItemsSource="{Binding Recipes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D30" 
                                BorderBrush="#404040" 
                                BorderThickness="1"
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>

                                    <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap" 
                                               Foreground="#CCCCCC"
                                               Margin="0,5,0,10"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Локация: " 
                                                   Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding Location}" 
                                                   Foreground="#CCCCCC"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Сложность: " 
                                                   Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding Difficulty}" 
                                                   Foreground="White"/>
                                    </StackPanel>

                                    <TextBlock Text="Необходимые дары:" 
                                               Foreground="#AAAAAA"
                                               Margin="0,10,0,5"/>

                                    <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding RequiredGifts}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#404040" 
                                                            CornerRadius="4" 
                                                            Padding="5" 
                                                            Margin="0,2">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   Foreground="White" 
                                                                   FontSize="12"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Background="#007ACC" 
                                        CornerRadius="6" 
                                        Padding="10"
                                        Margin="10,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Результат" 
                                                   FontWeight="Bold" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>

                                        <Border Background="#3C3C3C" 
                                                CornerRadius="4" 
                                                Padding="5" 
                                                Margin="0,5">
                                            <TextBlock Text="{Binding ResultGift.Name}" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="White"
                                                       TextAlignment="Center"/>
                                        </Border>

                                        <Image Source="{Binding ResultGift.ImagePath, Converter={StaticResource ImagePathConverter}}" 
                                               Width="50" 
                                               Height="50"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                            <TextBlock Text="Tier " 
                                                       FontSize="10" 
                                                       Foreground="#CCCCCC"/>
                                            <TextBlock Text="{Binding ResultGift.Tier}" 
                                                       FontSize="10" 
                                                       Foreground="White"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding ResultGift.Status}" 
                                                   FontSize="9" 
                                                   Foreground="#CCCCCC"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>