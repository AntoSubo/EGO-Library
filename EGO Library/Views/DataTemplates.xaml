<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:EGO_Library.Views.Controls"
                    xmlns:vm="clr-namespace:EGO_Library.ViewModels">

    <DataTemplate DataType="{x:Type vm:GiftListViewModel}">
        <views:GiftListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:GiftDetailViewModel}">
        <views:GiftDetailView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:RecipeViewModel}">
        <views:RecipeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AboutViewModel}">
        <views:AboutView/>
    </DataTemplate>

</ResourceDictionary>
